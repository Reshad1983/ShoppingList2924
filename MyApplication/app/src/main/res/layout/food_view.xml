<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/bordered_transparent"
    android:orientation="horizontal"
    android:padding="5dp">
        <TextView
            android:id="@+id/add_ingredient_to_food_id"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="@android:drawable/ic_input_add"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/food_name_view_id"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/transparent_corner"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/add_ingredient_to_food_id"
            app:layout_constraintTop_toTopOf="@+id/add_ingredient_to_food_id"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/remove_food_id"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="@android:drawable/ic_delete"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/transparent_corner"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/food_name_view_id"
            app:layout_constraintTop_toTopOf="@+id/food_name_view_id"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>