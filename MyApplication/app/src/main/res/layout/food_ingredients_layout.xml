<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:padding="5dp"
    android:background="@drawable/rounded_corner"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/food_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:textSize="13sp"
        android:padding="5dp"
        android:background="@drawable/rounded_corner2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/food_ingredients_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:padding="5dp"
        android:textSize="11sp"
        android:background="@drawable/rounded_corner3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_name_id" />

    <TextView
        android:id="@+id/day_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/unchecked"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/food_name_id"
        app:layout_constraintTop_toTopOf="@+id/food_ingredients_id" />


</androidx.constraintlayout.widget.ConstraintLayout>